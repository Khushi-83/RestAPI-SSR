<%- include('../partials/header') %>

<h2>Students</h2>
<a href="/students/new">Add New Student</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Roll No</th>
      <th>Class</th>
      <th>Section</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rollNo %></td>
        <td><%= student.class || '-' %></td>
        <td><%= student.section || '-' %></td>
        <td>
          <a href="/students/<%= student._id %>">View</a> |
          <a href="/students/<%= student._id %>/edit">Edit</a> |
          <form action="/students/<%= student._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button onclick="return confirm('Delete student?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>


