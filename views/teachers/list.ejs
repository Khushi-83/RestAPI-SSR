<%- include('../partials/header') %>

<h2>Teachers</h2>
<a href="/teachers/new">Add New Teacher</a>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employee ID</th>
      <th>Subject</th>
      <th>Experience</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% teachers.forEach(t => { %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.employeeId %></td>
        <td><%= t.subject || '-' %></td>
        <td><%= t.yearsOfExperience || '-' %></td>
        <td>
          <a href="/teachers/<%= t._id %>">View</a> |
          <a href="/teachers/<%= t._id %>/edit">Edit</a> |
          <form action="/teachers/<%= t._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button onclick="return confirm('Delete teacher?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
